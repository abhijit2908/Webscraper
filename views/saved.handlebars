<div class="container">

<div class="jumbotron">
<h1>MarketWatch - Webscraper</h1>
</div>

<div class = "row main-btn">
  
  <form method='get' action='/articles' >
  <button type="submit" class="btn btn-danger btn-space col-md-2" id="scrape">Back to Scraped Articles</button>
  </form>
</div>  


<div class= "row">
   <div id = "articles">
    
      {{#unless savarticles.saved}}
		{{#each savarticles}}
			
		<div class="row">
			<div class="article panel-default">
        
				<a class="test col-md-6 panel-heading" target="_blank" data-id="{{this._id}}" href={{this.link}}>{{this.title}}
				</a>
				<button type="button" class="btn btn-danger btn-space delete col-md-2" data-id="{{this._id}}">Delete Article</button>
				<button type="button" data-toggle="modal" data-target="#{{this._id}}" class="btn btn-primary btn-space Note col-md-2" data-id="{{this._id}}">Article Notes</button>
     </div>
     </div>   
		
    <div class="modal fade" id="{{this._id}}" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
           <div class="modal-content">
            <div class="newnotemodal-container">
                <div class="modal-header">
              <h3 class='text-center'>Article Notes for:{{this._id}}</h3>
                </div>
                <div class="modal-body text-center">
                  <div class="row">
                {{#if this.note.body}}
                  <div class='panel'>{{this.note.body}}
                    <button class="btn btn-danger btn-sm toDelete" id="deleteNote{{this.note._id}}" data-id={{this.note._id}}>&times</button>

                  </div>
                {{/if}}
              </div>
              <div class='text-center' id="createNote">
              <textarea cols="70" id="articleNote{{this._id}}"></textarea>
        </div>
        <div class="modal-footer">
              <button type="submit" class="btn btn-default" data-dismiss="modal" onclick="emptyContent()" data-id="{{this._id}}">Close</button>
              <button type="submit" class="btn btn-primary" data-dismiss="modal" id ="submitNote" data-id="{{this._id}}">Submit</button>
              </div>
         </div>     
            </div>
        </div>
          </div>
    </div>
    {{/each}}
    {{/unless}}
 
   </div>
</div>

    


</div>